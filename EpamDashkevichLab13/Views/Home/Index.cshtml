@using EpamDashkevichLab13.Domain;
@model IQueryable<EpamDashkevichLab13.Domain.Item>
@{
    ViewData["Title"] = "Home Page";
}

<p style="font-size:50px" class="text-center">Storage</p>

<div style="margin-bottom:15px" class="text-center">
    <a asp-controller="Home" asp-action="ItemsEdit">Add new item</a>
</div>

<div class="text-center">
    @foreach(Item item in Model)
    {
    <div>
        @item.Name
        |
        @item.Quantity
        |
        <a asp-controller="Home" asp-action="ItemsEdit" asp-route-id="@item.Id">Edit</a>
        |
        <a asp-controller="Home" asp-action="ItemsDelete" asp-route-id="@item.Id">Delete</a>
    </div>
    }
</div>
